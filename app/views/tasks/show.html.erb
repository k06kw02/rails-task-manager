<% if @task.completed? %>
<span> <%= @task.title %> - <%= @task.details %> --- is done!</span>
<% else %>
<span> <%= @task.title %> - <%= @task.details %> ---- needs doing!</span>
<% end %>
<div>
<%= link_to "Back to list", tasks_path %>
<%= link_to "Update task", edit_task_path(@task) %>
<%= link_to "Delete task", task_path(@task), method: :delete, data: {confirm:"Are you sure?"} %>
<div>
